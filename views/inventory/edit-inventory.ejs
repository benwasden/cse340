<h1><%- title %></h1>
<%- messages() %>
<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
        <% }) %>
    </ul>
<% } %>    

<form id="class-form" class="updateForm" action="/inv/update" method="post">
    <p class="requirement">All Fields are required</p>
    <div class="inv-forms">
        <label>Classification <%- classifications %></label>
        <label>Make<input type="text" name="inv_make" value="<%= locals.inv_make %>" minlength="3" maxlength="40" placeholder="Min of 3 Characters" required></label>
        <label>Model<input type="text" name="inv_model" value="<%= locals.inv_model %>" minlength="3" maxlength="40" placeholder="Min of 3 Characters" required></label>
        <label>Description<textarea name="inv_description" minlength="2" maxlength="450" rows="5" required><%= locals.inv_description %></textarea></label>
        <label>Image Path<input type="text" name="inv_image" value="<%- locals.inv_image %>" required></label>
        <label>Thumbnail Path<input type="text" name="inv_thumbnail" value="<%- locals.inv_thumbnail %>" required></label>
        <label>Price<input type="number" name="inv_price" value="<%= locals.inv_price %>" placeholder="decimal or integer" required></label>
        <label>Year<input type="number" name="inv_year" value="<%= locals.inv_year %>" min="1900" max="2100" placeholder="4-digit year" required></label>
        <label>Miles<input type="number" name="inv_miles" value="<%= locals.inv_miles %>" placeholder="digits only" required></label>
        <label>Color<input type="text" name="inv_color" value="<%= locals.inv_color %>" required></label>
        <input type="submit" name="submit" id="updateBtn" class="inv-form-button" value="Update Vehicle" disabled>
        <input type="hidden" name="inv_id"
        <% if(locals.inv_id) { %> value=" <%= locals.inv_id %>"
    <% } %>>
    </div>
</form>

<script src="../../js/inv-update.js"></script>